Forecast <- function() {
setwd("D://P//General//Analytics Coursera//Kaggle//Rossmann Store Sales//WD")
data <- read.table('train.csv', sep=',', header=T)
Week <- ""

for(i in 1:nrow(data)){
  date <- data$Date
  Week[i]<- strftime(date[i], format = "%y%W")
}
y <- cbind(data,Week)
##return(y)
write.csv(y,file="Details.csv",row.names=FALSE) ## Write Results

}

